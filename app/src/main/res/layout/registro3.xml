<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jota.login2.Registro3"
    android:background="#ff63d5ff">


    <Spinner

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lista1"
        android:entries="@array/arrayPaises"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/lista2"
        android:layout_alignStart="@+id/lista2"
        android:layout_alignEnd="@+id/textView8">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comidas"
        android:id="@+id/textView5"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignTop="@+id/lista1"
        android:textColor="#ffb167ff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diversion"
        android:id="@+id/textView6"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:textColor="#ffb167ff"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista2"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tus gustos"
        android:id="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasatiempos"
        android:id="@+id/textView7"
        android:layout_below="@+id/lista1"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="47dp"
        android:textColor="#ffb167ff"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista3"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/lista1"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vestuario"
        android:id="@+id/textView9"
        android:textColor="#ffb167ff"
        android:textSize="20dp"
        android:layout_below="@+id/lista3"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista4"
        android:layout_below="@+id/lista3"
        android:layout_alignStart="@+id/lista3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/button3"
        android:background="#ffc184e2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
